@model List<Cinema>

@{
    Layout = "_AdminLayout";
}

@*Admin Section Start------------------------------------------------------*@
<div class="container mt-5">
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Location</th>
      <th scope="col">Description</th>
      <th scope="col">Action</th>
      <th scope="col">Details</th>
    </tr>
  </thead>
  <tbody>
	  @foreach(var i in Model){
    <tr>
      <th scope="row">@i.Id</th>
      <td>@i.Name</td>
      <td>@i.Location</td>
      <td>@i.Description</td>
      <td><a asp-action="InsertCinema"> <i class="fa fa-plus-circle"></i></a> <a asp-action="UpdateCinema" asp-route-id = "@i.Id"> <i class="fa fa-edit"></i></a> <a asp-action="Delete" asp-route-id = "@i.Id"> <i class="ti-trash"></i></a></td>
      <td><a asp-action="CinemaDetailsAdmin"><i class="fa fa-arrow-circle-right"></i></a></td>

    </tr>
	  }
  </tbody>
</table>
</div>
@*Admin Section end -----------------------------------------*@