@using MovieTickets.ViewModels
@model MovieViewModel

@{
    Layout = "_AdminLayout";
}
<div class="card mb-3" style="max-width: 540px;">
  <div class="row no-gutters">
    <div class="col-md-4">
      <img src="@Model.Image">
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text">@Model.Description</p>
      </div>
    </div>
  </div>
</div>